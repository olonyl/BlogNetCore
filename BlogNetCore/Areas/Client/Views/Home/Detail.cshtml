@model BlogNetCore.Models.Article;
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-light text-align ml-0 row container">
                <div class="col-12 col-md-6">
                    <h4 class="text-primary">@Model.Name</h4>
                </div>
                <div class="col-12 col-md-6">
                    <h4 class="text-muted">@Model.CreationDate</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="col-12">
                    <img src="@Model.UrlImage" class="img-thumbnail mx-auto d-block" />
                    <p class="text-secondary">@Html.Raw(Model.Description)</p>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Return</a>
                </div>
            </div>
        </div>
    </div>

